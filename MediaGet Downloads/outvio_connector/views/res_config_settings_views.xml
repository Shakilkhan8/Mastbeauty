<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.outvio.connector</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Outvio" string="Outvio" data-key="outvio_connector">
                    <h2>Outvio integration settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="api_url">
                            <label for="outvio_api_url" />
                            <field name="outvio_api_url" readonly="1" />
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="api_token">
                            <label for="outvio_api_token" />
                            <field name="outvio_api_token" readonly="1" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>